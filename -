Players = game:GetService("Players")
Run = game:GetService("RunService")
LocalPlayer = Players.LocalPlayer

Character = LocalPlayer.Character
Root = Character.HumanoidRootPart
Humanoid = Character.Humanoid

BodyVelocity = Instance.new("BodyVelocity",Root)
BodyVelocity.MaxForce = Vector3.new(1,1,1) * math.huge
BodyVelocity.P = math.huge

raycastParams = RaycastParams.new()
raycastParams.FilterDescendantsInstances = {Character}

Run.Heartbeat:Connect(function()
	Root.Velocity = Vector3.new(0,100000,0)
	BodyVelocity.Velocity = Humanoid.MoveDirection * 30
	local raycast = workspace:Raycast(Root.Position, Vector3.new(0,-100), raycastParams)
	BodyVelocity.Velocity += Vector3.new(0,(-raycast.Distance + 3)*10)
end)

Run.Stepped:Connect(function()
	Character.Torso.CanCollide = false
	Root.CanCollide = false
	Character.Head.CanCollide = false
end)


for i,v in pairs(Humanoid:GetPlayingAnimationTracks()) do
	v:Stop()
end

Character.Animate:Destroy()

function LoadAnimation(Id)
	local Animation = Instance.new("Animation")
	Animation.AnimationId = "rbxassetid://"..Id
	return Humanoid.Animator:LoadAnimation(Animation)
end

CryingAnimation = LoadAnimation("180612465")
Upset1 = LoadAnimation("216937924")
Upset2 = LoadAnimation("180611870")
Berserk = LoadAnimation("93648331")
ChaseArms = LoadAnimation("160100140")
ChaseLegs = LoadAnimation("180426354")
CoverFace = LoadAnimation("183696478")

function CryingIdle()
	CryingAnimation:Play()
	CoverFace:Play()
	task.wait(1)
	CryingAnimation:AdjustSpeed(0)
end

function BecomeAgro()

	CryingAnimation:Stop()
	CoverFace:Stop()
	Upset1:Play()

	task.wait(6)
	Upset1:Stop()
	Upset2:Play()
	Upset2:AdjustSpeed(2)

	task.wait(6)
	Upset2:Stop()
	Berserk:Play()
	Berserk:AdjustSpeed(.5)
	Berserk.Ended:Wait()
end

function AttackMode()
	ChaseArms:Play()
	ChaseLegs:Play()
	ChaseLegs:AdjustSpeed(1.5)
end

CryingIdle()
wait(4)
BecomeAgro()
AttackMode()
